<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tbs.thinkbiz.solutions.iloveurhome.RegisterActivity">



    <ScrollView
        android:id="@+id/scrolview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/re"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:src="@drawable/lognlogo" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView2"
                android:layout_marginTop="20dp"
                android:text="Register"
                android:gravity="center"
                android:textColor="@color/colorBlack"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/textViewname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView5"
                android:layout_marginLeft="20dp"
                android:textColor="#272727"
                android:textSize="15sp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="25dp"
                android:text="Name" />

            <TextView
                android:text="*"
                android:layout_marginTop="22dp"
                android:textColor="@color/red"
                android:textSize="18sp"
                android:layout_below="@+id/textView5"
                android:layout_toRightOf="@+id/textViewname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/fname"
                android:layout_below="@+id/textViewname"
                android:background="@color/colorWhite"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:textCursorDrawable="@color/darkgray"
                android:layout_marginEnd="20dp"
                android:textSize="12sp"
                android:paddingStart="10dp"
                android:layout_width="match_parent"
                android:hint="Your Name"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginLeft="20dp"
                android:paddingLeft="10dp" />


            <TextView
                android:id="@+id/textViewursname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/fname"
                android:layout_marginLeft="20dp"
                android:textColor="#272727"
                android:textSize="15sp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="25dp"
                android:text="Username" />

            <TextView
                android:text="*"
                android:layout_marginTop="22dp"
                android:textColor="@color/red"
                android:textSize="18sp"
                android:layout_below="@+id/fname"
                android:layout_toRightOf="@+id/textViewursname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/uname"
                android:layout_below="@+id/textViewursname"
                android:background="@color/colorWhite"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:textCursorDrawable="@color/darkgray"
                android:layout_marginEnd="20dp"
                android:textSize="12sp"
                android:paddingStart="10dp"
                android:layout_width="match_parent"
                android:hint=" Username"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginLeft="20dp"
                android:paddingLeft="10dp" />


            <TextView
                android:id="@+id/textViewemail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/uname"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="25dp"
                android:text="Email"
                android:textColor="#272727"
                android:textSize="15sp" />

            <TextView
                android:text="*"
                android:layout_marginTop="22dp"
                android:textColor="@color/red"
                android:textSize="18sp"
                android:layout_below="@+id/uname"
                android:layout_toRightOf="@+id/textViewemail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <EditText
                android:id="@+id/editTextemail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewemail"
                android:layout_marginEnd="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="@color/colorWhite"
                android:ems="10"
                android:hint="email@example.com"
                android:inputType="textEmailAddress"
                android:paddingLeft="10dp"
                android:paddingStart="10dp"
                android:textCursorDrawable="@color/darkgray"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textViewphn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/editTextemail"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="25dp"
                android:text="Password"
                android:textColor="#272727"
                android:textSize="15sp" />

            <TextView
                android:text="*"
                android:layout_marginTop="22dp"
                android:textColor="@color/red"
                android:textSize="18sp"
                android:layout_below="@+id/editTextemail"
                android:layout_toRightOf="@+id/textViewphn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/passtext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewphn"
                android:layout_marginEnd="20dp"
                android:layout_marginLeft="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorWhite"
                android:hint="Password"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:paddingStart="10dp"
                android:textCursorDrawable="@color/darkgray"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/passtext1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/passtext"
                android:layout_marginEnd="20dp"
                android:layout_marginLeft="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorWhite"
                android:hint="Confirm password"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:paddingStart="10dp"
                android:textCursorDrawable="@color/darkgray"
                android:textSize="12sp" />


            <Button
                android:id="@+id/button_regs"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/passtext1"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/buttoncorner"
                android:text="Register"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="15sp"
                android:textStyle="bold" />


        </RelativeLayout>
    </ScrollView>




</RelativeLayout>
