<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.user.iloveurhome.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <ScrollView
        android:id="@+id/scrolview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/re"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:scaleType="fitXY"
                android:src="@drawable/homescrn" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/imageView2"
                android:layout_marginTop="27dp"
                android:lineSpacingExtra="8sp"
                android:paddingEnd="15dp"
                android:paddingStart="18dp"
                android:text="@string/wlcomtexts"
                android:textColor="#545454"
                android:textSize="12sp"
                tools:ignore="RtlCompat" />

            <Button
                android:id="@+id/buttonbyr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:textColor="@color/colorWhite"
                android:textAllCaps="false"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:textStyle="bold"
                android:text="Buyers"
                android:layout_below="@+id/textView2"
                android:layout_marginTop="30dp"
                android:background="@drawable/buttoncorner" />


            <Button
                android:id="@+id/buttonslr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:textColor="@color/colorBlack"
                android:textAllCaps="false"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:textStyle="bold"
                android:text="Sellers"
                android:layout_below="@+id/buttonbyr"
                android:layout_marginTop="15dp"
                android:background="@drawable/buttoncorner1" />


        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
