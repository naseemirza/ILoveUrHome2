<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    tools:context="com.example.user.iloveurhome.ContactUsActivity">

    <ScrollView
        android:id="@+id/scrolview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/re"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:paddingEnd="20dp"
                android:paddingStart="20dp"
                android:textColor="#000"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:text="Some basic info so that we can think better how to help you"
                android:paddingRight="20dp"
                android:paddingLeft="20dp" />

            <LinearLayout
                android:id="@+id/li1"
                android:clickable="false"
                android:layout_marginTop="25dp"
                android:layout_below="@+id/textView"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageViewName"
                    android:layout_width="35dp"
                    android:clickable="false"
                    android:layout_height="35dp"
                    android:layout_marginStart="20dp"
                    android:layout_gravity="center"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/phone"
                    android:layout_marginLeft="20dp" />

                <TextView

                    android:id="@+id/textViewname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:paddingTop="5dp"
                    android:layout_marginStart="10dp"
                    android:paddingBottom="5dp"
                    android:text="734-972-6003"
                    android:textColor="#545454"
                    android:textSize="15sp"
                    android:layout_marginLeft="10dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/li2"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/li1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageViewName1"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="20dp"
                    android:layout_gravity="center"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/email"
                    android:layout_marginLeft="20dp" />

                <TextView

                    android:id="@+id/textViewname1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:paddingTop="5dp"
                    android:layout_marginStart="10dp"
                    android:paddingBottom="5dp"
                    android:text="Stewart@iloveyourhome.com"
                    android:textColor="#545454"
                    android:textSize="15sp"
                    android:layout_marginLeft="10dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/li3"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/li2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageViewName2"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="20dp"
                    android:layout_gravity="center"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/home"
                    android:layout_marginLeft="20dp" />

                <TextView

                    android:id="@+id/textViewname2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:paddingTop="5dp"
                    android:layout_marginStart="10dp"
                    android:paddingBottom="5dp"
                    android:text="11700 Lorem ipsaum is simply dummy text."
                    android:textColor="#545454"
                    android:textSize="15sp"
                    android:layout_marginLeft="10dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/textname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/li3"
                android:layout_marginLeft="20dp"
                android:textColor="#272727"
                android:textSize="15sp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:text="Name" />

            <EditText
                android:id="@+id/fname"
                android:layout_below="@+id/textname"
                android:textCursorDrawable="@color/darkgray"
                android:background="@color/colorWhite"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:textSize="12dp"

                android:paddingStart="10dp"
                android:layout_width="match_parent"
                android:hint="Your First Name"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:paddingLeft="10dp" />



            <TextView
                android:id="@+id/textViewemail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/fname"
                android:layout_marginLeft="20dp"
                android:textColor="#272727"
                android:textSize="15sp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:text="Email" />

            <EditText
                android:id="@+id/editTextemail"
                android:layout_below="@+id/textViewemail"
                android:background="@color/colorWhite"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:textSize="12dp"
                android:textCursorDrawable="@color/darkgray"
                android:paddingStart="10dp"
                android:layout_width="match_parent"
                android:hint="email@example.com"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:paddingLeft="10dp"
                android:ems="10"
                android:inputType="textEmailAddress" />

            <TextView
                android:id="@+id/textViewphn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/editTextemail"
                android:layout_marginLeft="20dp"
                android:textColor="#272727"
                android:textSize="15sp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:text="Phone" />

            <EditText
                android:id="@+id/phone"
                android:layout_below="@+id/textViewphn"
                android:background="@color/colorWhite"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:textCursorDrawable="@color/darkgray"
                android:layout_marginEnd="20dp"
                android:textSize="12dp"
                android:paddingStart="10dp"
                android:layout_width="match_parent"
                android:hint="### #### ###"
                android:inputType="number"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:paddingLeft="10dp" />


            <TextView
                android:id="@+id/msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/phone"
                android:layout_marginLeft="20dp"
                android:textColor="#272727"
                android:textSize="15sp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:text="Message" />


            <EditText
                android:id="@+id/editText2"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@+id/msg"
               android:textCursorDrawable="@color/darkgray"
                android:background="@color/colorWhite"
                android:gravity="top|left"
                android:paddingTop="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:textSize="12dp"
                android:paddingStart="10dp"
                android:hint="Type Text Here"
                android:inputType="textMultiLine"
                android:paddingLeft="10dp" />

            <Button
                android:id="@+id/buttonsbmt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:textColor="@color/colorWhite"
                android:textAllCaps="false"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:textStyle="bold"
                android:text="Submit Now"
                android:layout_marginBottom="20dp"
                android:layout_below="@+id/editText2"
                android:layout_marginTop="30dp"
                android:background="@drawable/buttoncorner" />


        </RelativeLayout>
    </ScrollView>


</RelativeLayout>
